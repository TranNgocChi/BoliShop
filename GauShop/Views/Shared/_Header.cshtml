        color: black;
        font-weight: 600;
        border-radius: 5px;
    }

    .dropdown-item:hover {
        background: #FF4400;
    }

    .dropdown-item:active {
        color: grey;
    }

    .btn-orange {
        background: #FF4400;
        color: white;
    }

    .btn-dark {
        color: white;
    }

    .btn-dark:hover {
        color: #FF4400;
    }

</style>
