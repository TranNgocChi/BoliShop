@model BusinessObject.HomeViewModel.HomeModel;

<!-- Header Start -->
<section class="preloader">
    <div class="spinner">
        <span class="sk-inner-circle"></span>
    </div>
</section>
<nav class="navbar navbar-expand-lg">
    <div class="container">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <a class="navbar-brand" href="/">
            <strong><span>Boli</span> Shop</strong>
        </a>

        <div class="d-lg-none">
            <a href="sign-in" class="bi-person custom-icon me-3"></a>
            <a href="product-detail" class="bi-bag custom-icon"></a>
        </div>
        

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Home">Trang Chủ</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-action="ViewStory" asp-controller="Story">Về Chúng Tôi</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-action="ViewProducts" asp-controller="Product">Sản Phẩm</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-action="ViewFaqs" asp-controller="FAQs">Dịch Vụ</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-action="ViewContact" asp-controller="Contact">Liên Hệ</a>
                </li>
            </ul>

            <div class="d-none d-lg-block">
                @if (Model != null)
                {
                    @if (Model.sessionId != null)
                    {
                        @* <a asp-controller="Cart" asp-action="ViewCart" class="bi-bag custom-icon" style="font-size:22px;">
                            <span style="color: white;" class="badge">@Model.cart.cartitems.Count</span>
                        </a> *@
                        <a asp-controller="Cart" asp-action="ViewCart" class="bi-bag custom-icon" style="font-size:22px;">
                            @if (Model.cart != null && Model.cart.cartitems != null)
                            {
                                <span style="color: white;" class="badge">@Model.cart.cartitems.Count</span>
                            }
                            else
                            {
                                <span style="color: white;" class="badge">0</span>
                            }
                        </a>
                        <a class="btn dropdown-toggle" >
                            <!-- <img src="~/images/akita.jpg"/> -->
                            <span style="color: black">@Model.sessionName</span>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item bi-person custom-icon" href="#"> Tài Khoản Của Tôi</a></li>
                            <li><a class="dropdown-item bi-cart" href="#"> Đặt Hàng</a></li>
                            <li><a class="dropdown-item bi-box" href="#"> Mục Yêu Thích</a></li>
                            <li><a class="dropdown-item bi-box-arrow-in-left" asp-action="Logout" asp-controller="SignIn"> Đăng Xuất</a></li>

                            <!-- Thêm các mục khác tại đây -->
                        </ul>

                    }
                    else
                    {
                        <div class="btn-log">
                            <a asp-controller="SignUp" asp-action="ViewSignUp" class="btn btn-sign nav-link bi-person-plus"> Đăng Ký</a>
                            <a asp-controller="SignIn" asp-action="ViewSignIn" class="btn btn-signIn nav-link bi-box-arrow-in-right"> Đăng Nhập</a>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <script>
        if (window.location.hash === "#_=_" || window.location.hash === "#") {
            window.location.hash = "";
        }

        document.addEventListener("DOMContentLoaded", function () {
            var dropdownToggle = document.querySelector(".dropdown-toggle");
            var dropdownMenu = document.querySelector(".dropdown-menu");

            dropdownToggle.addEventListener("mouseenter", function () {
                dropdownMenu.style.display = "block";
            });

            dropdownMenu.addEventListener("mouseleave", function () {
                dropdownMenu.style.display = "none";
            });
        });

        var navLinks = document.querySelectorAll(".navbar-nav a");
        var currentUrl = window.location.href;
        
        navLinks.forEach(function (navLink) {
            if (navLink.href === currentUrl) {
                navLink.classList.add("active");
            }

        })
    </script>
</nav>
<!-- Header End -->

<!-- JAVASCRIPT FILES -->
<script src="js/jquery.min.js"></script>
<script src="js/bootstrap.bundle.min.js"></script>
<script src="js/Headroom.js"></script>
<script src="js/jQuery.headroom.js"></script>
<script src="js/slick.min.js"></script>
<script src="js/custom.js"></script>

